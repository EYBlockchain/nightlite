{
  "name": "nightfall-sdk-api",
  "description": "SDK for Nightfall",
  "license": "MIT",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node build/index.js",
    "dev": "nodemon build/index.js",
    "build": "babel src -d build --copy-files",
    "watch": "babel src -d build --copy-files --watch",
    "test": "jest --watchAll --verbose=true --silent",
    "test:ci": "jest --verbose=true --silent --ci --coverage",
    "fix": "npm run format && npm run lint -- --fix && solium -d contracts",
    "format": "prettier --write \"**/*.{json,css,scss,md,html,sol}\"",
    "lint": "eslint .",
    "lint:md": "markdownlint -i node_modules -i build .",
    "validate": "npm run lint && npm run lint:md && npm run lint:sol",
    "lint:sol": "solium -d contracts"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@commitlint/cli": "^7.6.1",
    "@commitlint/config-conventional": "^7.6.0",
    "eslint": "^5.15.2",
    "eslint-config-codfish": "^2.5.0",
    "ethlint": "^1.2.4",
    "faker": "github:Marak/faker.js",
    "husky": "^1.3.1",
    "jest": "^24.9.0",
    "lint-staged": "^8.2.1",
    "markdownlint-cli": "^0.18.0",
    "nodemon": "^1.19.2",
    "prettier": "^1.16.4",
    "prettier-plugin-solidity": "^1.0.0-alpha.31",
    "supertest": "^3.4.2"
  },
  "dependencies": {
    "@eyblockchain/dapp-utils": "^1.5.0",
    "body-parser": "^1.19.0",
    "config": "^3.2.2",
    "cors": "^2.8.5",
    "ethers": "^4.0.37",
    "express": "^4.17.1",
    "express-validation": "^1.0.2",
    "joi": "^14.3.1",
    "lodash": "^4.17.15",
    "mongodb": "^3.3.2"
  }
}
